{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "sourceMap": true,
        "pretty": true,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "listFiles": false,
        "skipLibCheck": true,
        "types": ["jest"],
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": ["src/**/*", "**/__tests__/**/*"],
    "exclude": ["node_modules"]
}
